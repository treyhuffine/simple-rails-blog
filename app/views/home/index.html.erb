<h1 style="text-align: center; font-family: 'Roboto Condensed';">Welcome to WickedCool Blog!</h1>
<h4 style="text-align: center; font-family: 'Roboto Condensed';">All The Latest Posts</h4>

<div class="container">
    <div class="row">
        <%= form_for(@post) do |f| %>
            <div class="input-field col s12">
                <div class="field">
                    <%= f.label :post_title %><br />
                    <%= f.text_field :title, placeholder: "My Cool New Idea", id: "post_title", type: "text", style: "color: lightgray;" %>
                </div>

                <div class="field">
                    <%= f.text_area :content, placeholder: "Submit a blog post...", id: "post", type: "text", class: "materialize-textarea" %>
                </div>

            </div>
            <%= f.submit "Post", id: "submit", class: "btn waves-effect waves-light right", style: "margin-right: 10px; color: black;" %>
        <% end %>
    </div>

    <div class="row">
        <div class="col s12">
            <ul class="collection">
                <%= render @posts %>
            </ul>
        </div>
    </div>
</div>

